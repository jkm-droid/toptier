<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_vip"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vip_image1"
            android:src="@drawable/vip_fire"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/vip_benefits"
            android:textAlignment="center"
            android:text="@string/vip_message"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/vip_image2"
            android:src="@drawable/vip_fire"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:text="Benefits of joining VIP"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Correct tips"
            android:textColor="#fff"
            android:drawableLeft="@drawable/won_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Real-time &amp; Daily updates"
            android:drawableLeft="@drawable/won_status"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="More accurate tips"
            android:drawableLeft="@drawable/won_status"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="@string/benefits_of_joining_toptier_odds"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/toptier_benefits"
            android:drawableLeft="@drawable/won_status"
            android:text="Free tips"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Real-time updates"
            android:drawableLeft="@drawable/won_status"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Accurate tips"
            android:textColor="#fff"
            android:drawableLeft="@drawable/won_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/join_vip"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="REGISTER FOR FREE TIPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>